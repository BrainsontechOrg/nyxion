---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import stylesUrl from "@/styles/global.css?url";

const { title = "Nyxion" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preload" href={stylesUrl} as="style" fetchpriority="high" />
    <link rel="stylesheet" href={stylesUrl} />

    <link href="https://api.resend.com" crossorigin />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Nyxion ofrece servicios avanzados de ciberseguridad en Sevilla. Expertos en auditorías, pentesting y protección digital para empresas."
    />
    <meta
      name="keywords"
      content="ciberseguridad Sevilla, empresa ciberseguridad, pentesting, seguridad informática, Nyxion"
    />
    <meta name="robots" content="index, follow" />
    <meta
      property="og:title"
      content="Nyxion | Empresa de Ciberseguridad en Sevilla"
    />
    <meta
      property="og:description"
      content="Protegemos tu negocio frente a amenazas digitales. Auditorías, pentesting y soluciones avanzadas desde Sevilla."
    />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:url" content={import.meta.env.PUBLIC_SITE_URL} />

    <link rel="preconnect" href={import.meta.env.PUBLIC_SITE_URL} crossorigin />

    <link
      href="/fonts/Inter/Inter-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      href="/fonts/Inter/Inter-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      href="/fonts/Inter/Inter-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      href="/fonts/Material-Symbols/MaterialSymbolsRounded-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- JSON-LD global de la organización -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Nyxion Cybersecurity",
        "alternateName": "Nyxion",
        "url": "https://nyxionsec.com",
        "logo": "https://nyxionsec.com/assets/logo.webp",
        "description": "Nyxion Cybersecurity ofrece servicios avanzados de ciberseguridad preventiva, reactiva y formación para empresas, pymes y autónomos en toda España.",
        "telephone": "+34 625 79 77 83",
        "email": "contacto@nyxionsec.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Sevilla",
          "addressCountry": "ES"
        },
        "sameAs": [
          "https://www.linkedin.com/company/nyxioncybersecurity/",
          "https://www.instagram.com/nyxionsec/",
          "https://x.com/nyxionsec"
        ],
        "founder": {
          "@type": "Person",
          "name": "Equipo Nyxion"
        },
        "areaServed": {
          "@type": "Place",
          "name": "España"
        }
      }
    </script>

    <!-- JSON-LD del sitio web -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Nyxion Cybersecurity",
        "url": "https://nyxionsec.com",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://nyxionsec.com/?s={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>

  <body class="font-display text-text-light dark:text-text-dark">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
