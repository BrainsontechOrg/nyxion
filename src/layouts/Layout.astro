---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import stylesUrl from "@/styles/global.css?url";

const { title = "Nyxion" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preload" href={stylesUrl} as="style" fetchpriority="high" />
    <link rel="stylesheet" href={stylesUrl} />

    <link href="https://api.resend.com" crossorigin />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Nyxion ofrece servicios avanzados de ciberseguridad en Sevilla. Expertos en auditorías, pentesting y protección digital para empresas."
    />
    <meta
      name="keywords"
      content="ciberseguridad Sevilla, empresa ciberseguridad, pentesting, seguridad informática, Nyxion"
    />
    <meta name="robots" content="index, follow" />
    <meta
      property="og:title"
      content="Nyxion | Empresa de Ciberseguridad en Sevilla"
    />
    <meta
      property="og:description"
      content="Protegemos tu negocio frente a amenazas digitales. Auditorías, pentesting y soluciones avanzadas desde Sevilla."
    />
    <meta
      property="og:image"
      content="https://nyxionsec.com/assets/logo.webp"
    />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:width" content="600" />
    <meta property="og:image:height" content="600" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:url" content={import.meta.env.PUBLIC_SITE_URL} />

    <link rel="preconnect" href={import.meta.env.PUBLIC_SITE_URL} crossorigin />

    <link
      href="/fonts/Inter/Inter-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      href="/fonts/Inter/Inter-Medium.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      href="/fonts/Inter/Inter-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      href="/fonts/Material-Symbols/MaterialSymbolsRounded-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- JSON-LD global de la organización -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Nyxion",
        "alternateName": "Nyxion Ciberseguridad",
        "url": "https://nyxionsec.com",
        "logo": "https://nyxionsec.com/assets/logo.webp",
        "image": "https://nyxionsec.com/assets/logo.webp",
        "slogan": "Tu defensa digital empieza aquí",
        "description": "Nyxion ofrece servicios avanzados de ciberseguridad preventiva, reactiva, auditorías y formación para empresas, pymes y autónomos en toda España.",
        "foundingDate": "2025",
        "telephone": "+34 643 16 73 17",
        "email": "info@nyxionsec.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Oficina virtual",
          "addressLocality": "Sevilla",
          "addressCountry": "ES"
        },
        "areaServed": {
          "@type": "Place",
          "name": "España"
        },
        "contactPoint": [
          {
            "@type": "ContactPoint",
            "telephone": "+34 643 16 73 17",
            "contactType": "customer service",
            "areaServed": "ES",
            "availableLanguage": ["Spanish"],
            "hoursAvailable": {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": [
                "Monday",
                "Tuesday",
                "Wednesday",
                "Thursday",
                "Friday"
              ],
              "opens": "09:00",
              "closes": "20:00"
            }
          }
        ],
        "makesOffer": [
          {
            "@type": "Service",
            "name": "Ciberseguridad preventiva",
            "image": "https://nyxionsec.com/assets/img/ciberseguridad-preventiva.webp",
            "description": "Servicios preventivos para proteger tu negocio antes de que ocurran incidentes: auditorías, informes de exposición y análisis de infraestructura.",
            "serviceType": "Ciberseguridad preventiva",
            "hasOfferCatalog": {
              "@type": "OfferCatalog",
              "name": "Servicios de Ciberseguridad Preventiva",
              "itemListElement": [
                {
                  "@type": "Service",
                  "name": "Auditorías web",
                  "description": "Pago por vulnerabilidad encontrada (modelo pay-as-vuln-find).",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Variable"
                    }
                  }
                },
                {
                  "@type": "Service",
                  "name": "Informes de presencia en Deep Web",
                  "description": "Evaluación de exposición de datos sensibles en la Deep Web.",
                  "offers": [
                    {
                      "@type": "Offer",
                      "name": "Pago único",
                      "priceSpecification": {
                        "@type": "PriceSpecification",
                        "priceCurrency": "EUR",
                        "price": "Variable"
                      }
                    },
                    {
                      "@type": "Offer",
                      "name": "Suscripción mensual",
                      "priceSpecification": {
                        "@type": "PriceSpecification",
                        "priceCurrency": "EUR",
                        "price": "Variable mensual"
                      }
                    }
                  ]
                },
                {
                  "@type": "Service",
                  "name": "Auditorías de infraestructura, Wi-Fi y apps móviles",
                  "description": "Análisis de seguridad de sistemas, redes inalámbricas y aplicaciones móviles.",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Presupuesto personalizado"
                    }
                  }
                }
              ]
            }
          },
          {
            "@type": "Service",
            "name": "Ciberseguridad reactiva",
            "image": "https://nyxionsec.com/assets/img/ciberseguridad-reactiva.webp",
            "description": "Servicios de respuesta y recuperación ante incidentes de ciberseguridad.",
            "hasOfferCatalog": {
              "@type": "OfferCatalog",
              "name": "Servicios de Ciberseguridad Reactiva",
              "itemListElement": [
                {
                  "@type": "Service",
                  "name": "Análisis forense digital",
                  "description": "Investigación técnica de incidentes de seguridad en cualquier dispositivo.",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Presupuesto personalizado"
                    }
                  }
                },
                {
                  "@type": "Service",
                  "name": "Asesoramiento de corrección de vulnerabilidades",
                  "description": "Revisión y acompañamiento en la remediación de vulnerabilidades detectadas.",
                  "offers": {
                    "@type": "Offer",
                    "name": "Pago extra por servicio realizado",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Variable"
                    }
                  }
                },
                {
                  "@type": "Service",
                  "name": "Peritaje informático",
                  "description": "Elaboración de informes técnicos y pruebas periciales ante procesos judiciales.",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Presupuesto personalizado"
                    }
                  }
                },
                {
                  "@type": "Service",
                  "name": "Recuperación de datos",
                  "description": "Recuperación de datos borrados o dañados bajo modelo de pago por tasa de éxito.",
                  "offers": {
                    "@type": "Offer",
                    "name": "Pago por tasa de éxito",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Variable según caso"
                    }
                  }
                }
              ]
            }
          },
          {
            "@type": "Service",
            "name": "Ciberseguridad avanzada",
            "image": "https://nyxionsec.com/assets/img/ciberseguridad-avanzada.webp",
            "description": "Monitorización activa, despliegue de soluciones de seguridad y defensa proactiva ante amenazas.",
            "hasOfferCatalog": {
              "@type": "OfferCatalog",
              "name": "Servicios de Ciberseguridad Avanzada",
              "itemListElement": [
                {
                  "@type": "Service",
                  "name": "Monitorización activa (Wazuh)",
                  "description": "Supervisión continua de infraestructura, correo y servicios PaaS. Despliegue único y mantenimiento mensual.",
                  "offers": [
                    {
                      "@type": "Offer",
                      "name": "Despliegue inicial",
                      "priceSpecification": {
                        "@type": "PriceSpecification",
                        "priceCurrency": "EUR",
                        "price": "Pago único"
                      }
                    },
                    {
                      "@type": "Offer",
                      "name": "Mantenimiento mensual",
                      "priceSpecification": {
                        "@type": "PriceSpecification",
                        "priceCurrency": "EUR",
                        "price": "Mensual según VPS y alcance"
                      }
                    }
                  ]
                },
                {
                  "@type": "Service",
                  "name": "Campañas de phishing controlado",
                  "description": "Simulaciones de phishing y pruebas de ingeniería social para evaluar el nivel de concienciación de la organización.",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Presupuesto personalizado"
                    }
                  }
                }
              ]
            }
          },
          {
            "@type": "Service",
            "name": "Formación y concienciación en ciberseguridad",
            "image": "https://nyxionsec.com/assets/img/formacion.webp",
            "description": "Charlas, talleres y formación adaptada por roles para empresas y particulares.",
            "hasOfferCatalog": {
              "@type": "OfferCatalog",
              "name": "Formación y concienciación",
              "itemListElement": [
                {
                  "@type": "Service",
                  "name": "Charlas y talleres presenciales o online",
                  "description": "Sesiones de concienciación adaptadas a distintos niveles de experiencia.",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Presupuesto personalizado"
                    }
                  }
                },
                {
                  "@type": "Service",
                  "name": "Formación por roles",
                  "description": "Cursos específicos para directivos, finanzas, desarrolladores y personal general.",
                  "offers": {
                    "@type": "Offer",
                    "priceSpecification": {
                      "@type": "PriceSpecification",
                      "priceCurrency": "EUR",
                      "price": "Variable según modalidad"
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    </script>
  </head>
</html>

<body class="font-display text-text-light dark:text-text-dark">
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
