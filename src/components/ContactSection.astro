---
const siteKey = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY;
---

<script
  is:inline
  src={"https://www.google.com/recaptcha/api.js?render=" + siteKey}></script>

<section
  id="contacto"
  class="bg-section-dark py-16 sm:py-24 dark:bg-section-dark"
  aria-labelledby="contacto-title">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 items-center">
      <!-- Lado izquierdo -->
      <div>
        <h2
          class="text-3xl font-extrabold text-white sm:text-4xl"
          id="contacto-title">
          Hablemos de tu seguridad digital
        </h2>
        <p class="mt-4 text-lg text-text-muted-dark max-w-lg">
          Analizamos tu situaci√≥n sin compromiso y te proponemos un plan claro,
          accionable y medible.
        </p>

        <div class="mt-6 flex flex-col gap-3 text-text-muted-dark">
          <div class="flex items-center gap-3">
            <span class="material-symbols-rounded text-primary"
              >location_on</span
            >
            <span>Sevilla, Espa√±a</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="material-symbols-rounded text-primary">mail</span>
            <span>info@nyxionsec.com</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="material-symbols-rounded text-primary">call</span>
            <span>+34 643 167 317</span>
          </div>
        </div>
      </div>

      <!-- Formulario -->
      <form
        id="form"
        method="POST"
        class="space-y-4 rounded-xl bg-background-dark p-6 shadow-lg border border-border-dark">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <input
            type="text"
            name="name"
            placeholder="Nombre completo *"
            required
            class="w-full rounded-lg border border-border-dark bg-surface-dark px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary"
          />
          <input
            type="email"
            name="email"
            placeholder="Email corporativo *"
            required
            class="w-full rounded-lg border border-border-dark bg-surface-dark px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary"
          />
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <input
            type="tel"
            name="phone"
            placeholder="Tel√©fono de contacto *"
            pattern="[0-9+\s()-]{6,20}"
            title="Introduce un n√∫mero de tel√©fono v√°lido"
            class="w-full rounded-lg border border-border-dark bg-surface-dark px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary"
          />

          <select
            name="service"
            id="service"
            class="w-full rounded-lg border border-border-dark bg-surface-dark px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary">
            <option value="" hidden selected>Selecciona un servicio</option>
            <option value="preventiva">Ciberseguridad Preventiva</option>
            <option value="reactiva">Ciberseguridad Reactiva</option>
            <option value="avanzada">Ciberseguridad Avanzada</option>
            <option value="formacion">Formaci√≥n y Concienciaci√≥n</option>
            <option value="consulta">Consulta General</option>
          </select>
        </div>

        <textarea
          name="message"
          placeholder="Cu√©ntanos brevemente tu situaci√≥n *"
          required
          rows="4"
          class="w-full rounded-lg border border-border-dark bg-surface-dark px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-1 focus:ring-primary"
        ></textarea>

        <!-- ‚úÖ Bot√≥n sin data-callback -->
        <button
          type="submit"
          aria-label="Enviar consulta"
          class="w-full rounded-lg bg-primary px-6 py-3 font-semibold text-white transition hover:bg-secondary-blue cursor-pointer">
          Enviar consulta
        </button>
      </form>
    </div>
  </div>
</section>

<script is:inline define:vars={{ siteKey }}>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector("#form");
    const button = form.querySelector("button[type='submit']");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      button.disabled = true;
      button.textContent = "Enviando...";

      const formData = Object.fromEntries(new FormData(form));
      try {
        const token = await grecaptcha.execute(siteKey, {
          action: "submit",
        });
        formData.token = token;

        const res = await fetch("/api/contact", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });

        const result = await res.json();

        if (result.success) {
          notify("Tu consulta se ha enviado correctamente.", "success");
          form.reset();
        } else {
          notify(
            result.error || "‚ùå Ha ocurrido un error. Int√©ntalo de nuevo.",
            "error",
          );
        }
      } catch (error) {
        console.error("[Contacto] Error:", error);
        notify("‚ùå Ha ocurrido un error inesperado.", "error");
      } finally {
        button.disabled = false;
        button.textContent = "Enviar consulta";
      }
    });

    function notify(message, type = "info") {
      const existing = document.getElementById("nyxion-toast");
      if (existing) existing.remove(); // Evita duplicados

      const toast = document.createElement("div");
      toast.id = "nyxion-toast";
      toast.innerHTML = `
    <div class="flex items-center gap-3">
      <span class="material-symbols-rounded text-lg">
        ${type === "success" ? "check_circle" : type === "error" ? "error" : "info"}
      </span>
      <span class="text-sm font-medium">${message}</span>
    </div>
  `;

      // üîπ Estilos corporativos Nyxion (modernos, sutiles y arriba a la derecha)
      toast.className = `
    fixed top-6 right-6 flex items-center
    px-4 py-3 rounded-lg shadow-xl border
    backdrop-blur-md z-50 transition-all duration-300
    opacity-0 translate-y-[-10px]
    ${
      type === "success"
        ? "bg-green-600/90 border-green-400 text-white"
        : type === "error"
          ? "bg-red-600/90 border-red-400 text-white"
          : "bg-primary/90 border-primary-light text-white"
    }
  `;

      document.body.appendChild(toast);

      // üé¨ Animaci√≥n de entrada
      setTimeout(() => {
        toast.style.opacity = "1";
        toast.style.transform = "translateY(0)";
      }, 50);

      // ‚è∞ Desaparici√≥n progresiva
      setTimeout(() => {
        toast.style.opacity = "0";
        toast.style.transform = "translateY(-10px)";
        setTimeout(() => toast.remove(), 300);
      }, 4000);
    }
  });
</script>
