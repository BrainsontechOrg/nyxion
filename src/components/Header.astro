---
import Nav from "@/components/Nav.astro";
---

<header
  id="navbar"
  class="fixed top-0 z-50 w-full bg-transparent backdrop-blur-sm transition-all duration-300">
  <div
    class="container mx-auto flex h-20 items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Logo + Hamburguesa -->
    <div class="flex items-center gap-3">
      <!-- Botón hamburguesa solo visible en móvil -->
      <button
        id="menu-toggle"
        class="lg:hidden text-white dark:text-text-dark"
        aria-label="Abrir menú de navegación">
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Logo clicable -->
      <a href="/#inicio" class="flex items-center gap-2 scroll-smooth">
        <svg
          class="h-8 w-auto"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 428 511"
          aria-label="Logo Nyxion">
          <rect fill="#0085bd" width="214" height="346"></rect>
          <rect fill="#0085bd" x="214" y="165" width="214" height="346"></rect>
        </svg>
        <h2 class="text-2xl font-bold text-white">Nyxion</h2>
      </a>
    </div>

    <!-- Botón visible solo en móvil -->
    <a
      href="/#contacto"
      class="lg:hidden rounded-lg bg-primary px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-secondary-blue transition-colors">
      Contáctanos
    </a>

    <!-- Navegación (desktop + menú móvil) -->
    <Nav />
  </div>
</header>

<script is:inline>
  document.addEventListener("scroll", () => {
    const navbar = document.getElementById("navbar");
    const scrollY = window.scrollY;
    const isHome =
      window.location.pathname === "/" ||
      window.location.pathname === "/index.html";

    // Solo aplicar el efecto si estamos en la home
    if (isHome) {
      if (scrollY > 50) {
        navbar.classList.add(
          "bg-section-dark/90",
          "shadow-[0_2px_10px_rgba(0,0,0,0.4)]",
          "backdrop-blur-md",
        );
        navbar.classList.remove("bg-transparent");
      } else {
        navbar.classList.remove(
          "bg-section-dark/90",
          "shadow-[0_2px_10px_rgba(0,0,0,0.4)]",
          "backdrop-blur-md",
        );
        navbar.classList.add("bg-transparent");
      }
    } else {
      // En otras páginas: fondo fijo oscuro
      navbar.classList.add(
        "bg-section-dark/90",
        "shadow-[0_2px_10px_rgba(0,0,0,0.4)]",
        "backdrop-blur-md",
      );
      navbar.classList.remove("bg-transparent");
    }
  });

  // Ejecutar al cargar también, no solo al hacer scroll
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");
    const isHome =
      window.location.pathname === "/" ||
      window.location.pathname === "/index.html";
    if (!isHome) {
      navbar.classList.add(
        "bg-section-dark/90",
        "shadow-[0_2px_10px_rgba(0,0,0,0.4)]",
        "backdrop-blur-md",
      );
      navbar.classList.remove("bg-transparent");
    }
  });
</script>
